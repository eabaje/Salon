@model Salon.WebUI.Models.Appointment

@{
    ViewData["Title"] = "CreateAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-sm-12">
        <!-- Basic Form Inputs card start -->
        <div class="card">
            <div class="card-header">
                <h5>Salon Appointment Entry </h5>
                <span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>
            </div>
            <div class="card-block">
                <h4 class="sub-title">Create an Appointment</h4>
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Simple Input</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ServiceTypeId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="ServiceTypeId" class="form-control" placeholder="ServiceType">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BarberId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="BarberId" class="form-control" placeholder="Type in Barber Name">
                            <span asp-validation-for="BarberId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="SalonId" class="col-sm-2 col-form-label">Salon Name</label>
                        <div class="col-sm-10">
                            <input type="password" asp-for="SalonId" class="form-control" placeholder="Type in the Salon Name">
                            <span asp-validation-for="SalonId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CustomerId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="CustomerId" class="form-control" placeholder="Customer Name">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="AppointmentDate" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="AppointmentDate" class="form-control" placeholder="Appointment Date">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="AppointmentTime" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="AppointmentTime" class="form-control" placeholder="Appointment Time">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Status" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Status" class="form-control" placeholder="Appointment Status">
                        </div>
                    </div>

                    
                   
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Select Box</label>
                        <div class="col-sm-10">
                            <select name="select" class="form-control">
                                <option value="opt1">Select One Value Only</option>
                                <option value="opt2">Type 2</option>
                                <option value="opt3">Type 3</option>
                                <option value="opt4">Type 4</option>
                                <option value="opt5">Type 5</option>
                                <option value="opt6">Type 6</option>
                                <option value="opt7">Type 7</option>
                                <option value="opt8">Type 8</option>
                            </select>
                        </div>
                    </div>
                    
                    
                </form>
               
            </div>
        </div>
        <!-- Basic Form Inputs card end -->
     </div>
</div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
