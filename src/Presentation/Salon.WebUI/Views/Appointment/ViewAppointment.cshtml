@model IEnumerable<Salon.WebUI.Models.Appointment>

@{
    ViewData["Title"] = "ViewAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewAppointment</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card">
    <div class="card-header">
        <h5>View your appointments</h5>
       
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                <li><i class="fa fa-window-maximize full-card"></i></li>
                <li><i class="fa fa-minus minimize-card"></i></li>
                <li><i class="fa fa-refresh reload-card"></i></li>
                <li><i class="fa fa-trash close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AppointmentId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BarberId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SalonId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CalenderItemId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AppointmentDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AppointmentTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BarberId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalonId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CalenderItemId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceTypeId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Hover table card end -->
