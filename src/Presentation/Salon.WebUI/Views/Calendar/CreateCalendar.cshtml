@model Salon.WebUI.Models.Calendar

@{
    ViewData["Title"] = "CreateCalendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateCalendar</h1>

<h4>Calendar</h4>
<hr />
